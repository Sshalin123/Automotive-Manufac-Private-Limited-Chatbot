# AMPL Chatbot Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# PINECONE CONFIGURATION
# ============================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=ampl-chatbot
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# ============================================
# AWS CONFIGURATION (for Bedrock)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Bedrock Models
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0
BEDROCK_LLM_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0

# ============================================
# OPENAI CONFIGURATION (alternative to Bedrock)
# ============================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4o-mini

# ============================================
# LLM SETTINGS
# ============================================
LLM_PROVIDER=bedrock  # bedrock or openai
MAX_TOKENS=1024
TEMPERATURE=0.3

# ============================================
# RAG SETTINGS
# ============================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
TOP_K=5
SIMILARITY_THRESHOLD=0.5

# ============================================
# LEAD SCORING SETTINGS
# ============================================
LEAD_SCORE_THRESHOLD_HOT=70
LEAD_SCORE_THRESHOLD_WARM=50
AUTO_ROUTE_LEADS=true

# ============================================
# CRM INTEGRATION
# ============================================
CRM_WEBHOOK_URL=https://your-crm.com/webhook
CRM_API_KEY=your-crm-api-key
CRM_PROVIDER=custom  # zoho, hubspot, salesforce, custom

# ============================================
# DATABASE (for production)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/ampl_chatbot

# ============================================
# REDIS (for caching and sessions)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=AMPL Automotive Chatbot API
API_VERSION=1.0.0

# API Security
AMPL_API_KEY=your-api-key-for-clients
JWT_SECRET=your-jwt-secret-key

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or console

# ============================================
# MONITORING (optional)
# ============================================
SENTRY_DSN=https://your-sentry-dsn

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
RELOAD=false

# ============================================
# BRAND CUSTOMIZATION
# ============================================
BRAND_NAME=AMPL
